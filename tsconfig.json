{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "inlineSourceMap": false,
    "declarationMap": false,
    "typeRoots": ["node_modules/@types"]
  }
}
